<icecast>
  <location>Rep√∫blica Dominicana</location>
  <admin>admin@localhost</admin>

  <limits>
    <clients>100</clients>
    <sources>10</sources>
    <queue-size>524288</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
    <source-timeout>10</source-timeout>
    <burst-size>65535</burst-size>
  </limits>

  <authentication>
    <source-password>hackme</source-password>
    <relay-password>hackme</relay-password>
    <admin-user>admin</admin-user>
    <admin-password>hackme</admin-password>
  </authentication>

  <!-- Host accesible tanto en Render como localmente -->
  <hostname>0.0.0.0</hostname>

  <listen-socket>
    <port>8000</port>
  </listen-socket>

  <paths>
    <basedir>/tmp</basedir>
    <logdir>/tmp</logdir>
    <webroot>/tmp</webroot>
    <adminroot>/tmp</adminroot>
    <pidfile>/tmp/icecast.pid</pidfile>
  </paths>

  <!-- Evita el error "You should not run icecast2 as root" -->
  <changeowner>
    <user>nobody</user>
    <group>nogroup</group>
  </changeowner>

  <logging>
    <accesslog>/tmp/access.log</accesslog>
    <errorlog>/tmp/error.log</errorlog>
    <loglevel>3</loglevel>
    <logsize>10000</logsize>
  </logging>

  <fileserve>1</fileserve>
</icecast>
